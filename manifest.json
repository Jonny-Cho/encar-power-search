{
  "manifest_version": 3,
  "name": "Encar Power Search",
  "version": "1.0.8",
  "description": "엔카 무사고 차량 필터링 및 고급 검색 기능을 제공하는 Chrome 확장 프로그램",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "http://www.encar.com/*",
    "https://www.encar.com/*",
    "https://api.encar.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://www.encar.com/*", "https://www.encar.com/*"],
      "js": [
        "content/constants.js",
        "content/utils/dom.js",
        "content/utils/url.js",
        "content/services/settings.js",
        "content/services/router.js",
        "content/services/api.js",
        "content/modules/accident-filter.js",
        "content/modules/advanced-filter-panel.js",
        "content/modules/section-manager.js",
        "content/modules/pagerow-extension.js",
        "content/modules/vehicle-history.js",
        "content/modules/label-filter.js",
        "content/main.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Encar Power Search",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  }
}